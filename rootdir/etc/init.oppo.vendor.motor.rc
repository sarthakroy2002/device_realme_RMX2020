on boot
    chown system system /sys/bus/platform/devices/motor_pl/direction
    chown system system /sys/bus/platform/devices/motor_pl/enable
    chown system system /sys/bus/platform/devices/motor_pl/mode
    chown system system /sys/bus/platform/devices/motor_pl/speed
    chown system system /sys/bus/platform/devices/motor_pl/hall_data
    chown system system /sys/bus/platform/devices/motor_pl/hall_calibration
    chown system system /sys/bus/platform/devices/motor_pl/hall_irq_count
    chown system system /sys/bus/platform/devices/motor_pl/move_state
