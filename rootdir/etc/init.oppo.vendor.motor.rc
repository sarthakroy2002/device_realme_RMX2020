    chmod 0666 /sys/bus/platform/devices/motor_pl/force_move
    chmod 0666 /sys/bus/platform/devices/motor_pl/stop_range
    chmod 0666 /sys/bus/platform/devices/motor_pl/distance
    chmod 0666 /sys/bus/platform/devices/motor_pl/in_calibration

